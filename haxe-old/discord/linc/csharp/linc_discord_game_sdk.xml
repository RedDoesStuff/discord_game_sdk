<xml>

	<!-- For a more in depth guide: https://github.com/snowkit/hxcpp-guide -->

	<files id='haxe'>

		<!-- add files and flags to the haxe c++ build -->

		<compilerflag value='-I${LINC_DISCORD_GAME_SDK_PATH}/csharp/'/>

		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/ActivityManager.cs'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/Core.cs'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/ImageManager.cs'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/LobbyManager.cs'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/StorageManager.cs'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}csharp/StoreManager.cs'/>
		
	</files>

	<target id='haxe'>

		<section if='windows'>

			<libpathflag value='-L${LINC_DISCORD_GAME_SDK_PATH}lib/'/>

			<section if='HXCPP_M32'>

				<libpathflag value='-L${LINC_DISCORD_GAME_SDK_PATH}lib/x86/'/>

				<lib name='${LINC_DISCORD_GAME_SDK_PATH}lib/x86/discord_game_sdk.dll.lib'/>

			</section>

			<section if='HXCPP_M64'>

				<libpathflag value='-L${LINC_DISCORD_GAME_SDK_PATH}lib/x86_64/'/>

				<lib name='${LINC_DISCORD_GAME_SDK_PATH}lib/x86_64/discord_game_sdk.dll.lib'/>

			</section>

		</section>

		<section if='mac'>

			<libpathflag value='-L${LINC_DISCORD_GAME_SDK_PATH}lib/aarch64'/>
			
		</section>

		<!-- add linker flags to the haxe build output -->

	</target>

</xml>