<xml>

	<!-- For a more in depth guide: https://github.com/snowkit/hxcpp-guide -->

	<files id='haxe'>

		<!-- add files and flags to the haxe c++ build -->

		<compilerflag value='-I${LINC_DISCORD_GAME_SDK_PATH}cpp/'/>
		<compilerflag value='-DEMPTY_EXAMPLE_DEFINE_FOR_THE_CPP_CODE'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/achievement_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/activity_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/application_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/core.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/image_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/lobby_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/network_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/overlay_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/relationship_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/storage_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/store_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/user_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/voice_manager.cpp'/>
		<file name='${LINC_DISCORD_GAME_SDK_PATH}cpp/types.cpp'/>
	</files>

	<target id='haxe'>
		<section if='windows'>
			<libpathflag value='-L${LINC_DISCORD_GAME_SDK_PATH}cpp/'/>
			<section if='HXCPP_M32'>
				<lib name='${LINC_DISCORD_GAME_SDK_PATH}lib/x86/discord_game_sdk.dll.lib'/>
			</section>
			<section if='HXCPP_M64'>
				<lib name='${LINC_DISCORD_GAME_SDK_PATH}lib/x86_64/discord_game_sdk.dll.lib'/>
			</section>
		</section>

		<!-- add linker flags to the haxe build output -->

	</target>

</xml>